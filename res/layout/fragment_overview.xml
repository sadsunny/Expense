<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myView="http://schemas.android.com/apk/res/com.appxy.pocketexpensepro"   
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">
    
    <LinearLayout
        android:id="@+id/week_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@color/bag_gray"
        android:orientation="horizontal"
        android:paddingRight="2dp"
        android:weightSum="7" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SUN"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            android:alpha="0.7" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MON"
            android:textColor="@color/over_label_text"
            android:textSize="12sp" 
            android:alpha="0.7"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TUE"
            android:textColor="@color/over_label_text"
            android:textSize="12sp" 
            android:alpha="0.7"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WED"
            android:textColor="@color/over_label_text"
            android:textSize="12sp"
            android:alpha="0.7" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="THU"
            android:textColor="@color/over_label_text"
            android:textSize="12sp"
            android:alpha="0.7" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FRI"
            android:textColor="@color/over_label_text"
            android:textSize="12sp" 
            android:alpha="0.7"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SAT"
            android:textColor="@color/over_label_text"
            android:textSize="12sp" 
            android:alpha="0.7"/>
    </LinearLayout>
    

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/week_view"
        android:visibility="visible" >
        
        
        <android.support.v4.view.ViewPager
            android:id="@+id/mPager"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true" />

        <ListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mPager"
            android:layout_marginBottom="60dp"
            android:dividerHeight="0dp" >
        </ListView>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">
            
            <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/relativeLayout1"
            android:background="@color/line_devide_gray"/>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/over_bot_bag" >
               
            <RelativeLayout
                android:id="@+id/budget_relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp" 
                >

                <TextView
                    android:id="@+id/currency_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="bottom"
                    android:text="@string/dollar"
                    android:textSize="16.5sp"
                    android:textColor="@color/over_budget_text" />

                <TextView
                    android:id="@+id/left_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/currency_label1"
                    android:gravity="bottom"
                    android:text="@string/zero_label"
                    android:textSize="16.5sp"
                    android:textColor="@color/over_budget_text" />

                <TextView
                    android:id="@+id/left_label"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="top"
                    android:text="LEFT" 
                    android:textColor="@color/over_label_text"
                    android:textSize="10.5sp"
                    android:alpha="0.5"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp" >

                <TextView
                    android:id="@+id/currency_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="bottom"
                    android:text="@string/dollar" 
                    android:textColor="@color/text_black"
                    android:textSize="16.5sp"/>

                <TextView
                    android:id="@+id/net_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/currency_label2"
                    android:gravity="bottom"
                    android:text="@string/zero_label"
                    android:textColor="@color/text_black"
                    android:textSize="16.5sp" />

                <TextView
                    android:id="@+id/net_label"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="top"
                    android:text="NET WORTH"
                    android:textColor="@color/over_label_text"
                    android:textSize="10.5sp"
                    android:alpha="0.5"
                     />
            </RelativeLayout>
        </RelativeLayout>
        
        <com.appxy.pocketexpensepro.CircleView 
                android:id="@+id/add_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                myView:radius = "20dp"
                myView:background="@color/blue_theme"
                />
        
          <ImageView
                android:id="@+id/add_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                 android:layout_marginTop="32dp"
                android:src="@drawable/action_add" />
          
        </RelativeLayout>
        
    </RelativeLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/mPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>