<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/export_trans_csv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button1_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Transaction(CSV)"
            android:textColor="@color/text_black1"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_label1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/black_gray" >
    </View>

    <LinearLayout
        android:id="@+id/export_trans_pdf"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button1_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Transaction(PDF)"
            android:textColor="@color/text_black1"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_label2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/black_gray" >
    </View>

    <LinearLayout
        android:id="@+id/export_flow_pdf"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button1_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Cash Flow(PDF)"
            android:textColor="@color/text_black1"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_label3"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/black_gray" >
    </View>
    
</LinearLayout>