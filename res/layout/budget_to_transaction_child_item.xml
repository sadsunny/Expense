<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:maxEms="7"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16sp" 
            android:textColor="@color/text_black1"/>

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp" 
            android:textColor="@color/text_gray1"/>


        <TextView
            android:id="@+id/symbol_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/currency_txt"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/currency_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/amounttextView"
            android:text="@string/dollar"
            android:visibility="visible" 
            android:textSize="16sp"
            android:textColor="@color/text_black1"/>

        <TextView
            android:id="@+id/amounttextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:gravity="left"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
             android:textSize="16sp"
            android:textColor="@color/text_black1" />
    </RelativeLayout>
    
     <View
        android:id="@+id/mline_label"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_gray" >
    </View>
    
 
</LinearLayout>