<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="34dp" >

        <View
            android:id="@+id/color_view"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@color/blue" />
        
         <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/color_view" >

        <TextView
            android:id="@+id/account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:gravity="bottom"
            android:maxEms="7"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearance"
             android:textSize="14sp" 
            android:textColor="@color/text_black1"
            android:layout_marginBottom="-1dp"
            />
        
        <TextView
            android:id="@+id/currency_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_txt"
            android:layout_marginLeft="8dp"
            android:gravity="top"
            android:maxEms="12"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp" 
            android:textColor="@color/text_gray1"
            android:text="$"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:id="@+id/amonut_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_txt"
            android:layout_toRightOf="@+id/currency_txt"
            android:gravity="top"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp" 
            android:textColor="@color/text_gray1"
            android:layout_marginTop="-2dp"
             />
    </RelativeLayout>


        <TextView
            android:id="@+id/percentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="left"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" 
            android:textColor="@color/text_gray1"
            android:layout_marginTop="2dp"
             />
        
    </RelativeLayout>

</LinearLayout>