<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:checked="true" 
            android:visibility="invisible"
            android:focusable="false"/>

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/auto2" 
            />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/mImageView"
            android:gravity="bottom"
            android:maxEms="10"
            android:singleLine="true"
            android:text="自己(jkagf ajkffbfkdffgjhffaafgggggg"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16sp" 
            android:textColor="@color/text_black1"/>

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/mImageView"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp" 
            android:textColor="@color/text_gray1"/>

        <ImageView
            android:id="@+id/mImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextView2"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/TextView2"
            android:src="@drawable/photo_icon" />

        <ImageView
            android:id="@+id/mImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextView2"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/mImageView1"
            android:src="@drawable/memo_cion" />

        <TextView
            android:id="@+id/symbol_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/currency_txt"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/currency_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/amounttextView"
            android:gravity="right"
            android:text="@string/dollar"
            android:visibility="visible" 
            android:textSize="16sp"
            android:textColor="@color/text_black1"/>

        <TextView
            android:id="@+id/amounttextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:gravity="right"
            android:maxEms="6"
            android:singleLine="true"
            android:text="45.686,1646,6235,623226..."
            android:ellipsize="middle"
            android:textAppearance="?android:attr/textAppearanceSmall"
             android:textSize="16sp"
            android:textColor="@color/text_black1" />
    </RelativeLayout>
    
     <View
        android:id="@+id/mline_label"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="57dp"
        android:background="@color/devide_gray" >
    </View>
    
 
</LinearLayout>