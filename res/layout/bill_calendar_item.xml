<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:myView="http://schemas.android.com/apk/res/com.appxy.pocketexpensepro"   
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="46dp"
        android:layout_height="50dp" 
        android:background="@color/lightgray" >

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="14" />

        <com.appxy.pocketexpensepro.CircleView
            android:id="@+id/circle_red"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            myView:background="@color/bill_red"
             android:visibility="invisible"
            />
        
        <com.appxy.pocketexpensepro.CircleView
            android:id="@+id/circle_green"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/circle_red"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            myView:background="@color/bill_green"
             android:visibility="invisible"
            />
        
        <com.appxy.pocketexpensepro.RingView
            android:id="@+id/ring_green"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/circle_red"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
             android:visibility="invisible"
            />
        
        <com.appxy.pocketexpensepro.CircleView
            android:id="@+id/circle_gray"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/ring_green"
            android:layout_toRightOf="@+id/ring_green"
             android:layout_marginLeft="3dp"
            myView:background="@color/bill_gray" 
            android:visibility="invisible"/>
        
        

        <View
            android:id="@+id/line_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/black_gray" />

        <View
            android:id="@+id/line_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_gray" />


    </RelativeLayout>

</LinearLayout>