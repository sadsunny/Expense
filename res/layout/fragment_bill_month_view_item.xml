<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@drawable/week_item_selector" >
        
          <View
            android:id="@+id/line_view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:background="@color/today_text" />
          
           <TextView
            android:id="@+id/year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textColor="@color/little_text"
            android:text="2014" 
            />
         
          
           <TextView
            android:id="@+id/count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="10sp"
            android:text="12" 
            android:textColor="@color/text_red"
            />
           
            <View
            android:id="@+id/line_view2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/devide_gray" />

            <TextView
                android:id="@+id/month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year_text"
                android:layout_centerHorizontal="true"
                android:text="May"
                android:textSize="16.5sp"
                />
            
            <View
            android:id="@+id/line_view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/devide_gray" />
        
    </RelativeLayout>

</LinearLayout>