<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5" 
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >

       <RelativeLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
             >
            
            <Button  
            android:id="@+id/change_btn"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/frame_button"
            android:gravity="center"
            android:text="Expense"
            android:textSize="12sp"
            android:textColor="@color/little_text"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />
            
            <TextView 
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June, 2014"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray1"/>
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LineChartLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/LinearLayout1"
            android:minHeight="145dp"
            >
            
             <LinearLayout
            android:id="@+id/PieChartLayout"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            </LinearLayout>
            
             <Button
                android:id="@+id/change_btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/change_btn_selector"
                android:textSize="15sp" />
             
        </RelativeLayout>
        
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bill_gray" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" >
        

        <ListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
        </ListView>
        
    </RelativeLayout>

</LinearLayout>