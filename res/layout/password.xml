<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <EditText 
        android:id="@+id/passedit11"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:singleLine="true"
        android:inputType="number" />
    <ImageView 
        android:id="@+id/passlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:background="@drawable/ic_launcher"/>
    <TextView 
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Enter Passcode"
        android:textSize="19sp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passlogo"
        android:textColor="@color/text_black"/>
    <LinearLayout
        android:id="@+id/passlinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passtext"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:orientation="vertical" >
            <ImageView 
                android:id="@+id/passpoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passpoint"
                android:visibility="invisible"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal" />
            <ImageView 
                android:id="@+id/passwordline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passline2"
                android:layout_gravity="center_horizontal" /> 
        </LinearLayout>
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:orientation="vertical" >
            <ImageView 
                 android:id="@+id/passpoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passpoint"
                 android:visibility="invisible"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal" />
            <ImageView 
                android:id="@+id/passwordline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passline"
                android:layout_gravity="center_horizontal" /> 
        </LinearLayout>
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:orientation="vertical" >
            <ImageView 
                 android:id="@+id/passpoint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passpoint"
                 android:visibility="invisible"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal" />
            <ImageView 
                android:id="@+id/passwordline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passline"
                android:layout_gravity="center_horizontal" /> 
        </LinearLayout>
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:orientation="vertical" >
            <ImageView 
                 android:id="@+id/passpoint4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passpoint"
                 android:visibility="invisible"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal" />
            <ImageView 
                android:id="@+id/passwordline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/passline"
                android:layout_gravity="center_horizontal" /> 
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
