<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:maxEms="7"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/text_black1"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/currency_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/amount_txt"
                android:text="@string/text_label"
                android:textColor="@color/bill_green"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/inamount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:maxEms="12"
                android:singleLine="true"
                android:text="@string/text_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/bill_green"
                android:textSize="16sp" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/currency_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/examount_txt"
            android:text="@string/text_label"
            android:textColor="@color/bill_red"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/examount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/bill_red"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/line_devide_gray" />
    </RelativeLayout>

</LinearLayout>