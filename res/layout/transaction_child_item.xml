<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:checked="true" 
            android:focusable="false"/>

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@drawable/auto2" 
            />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/mImageView"
            android:gravity="bottom"
            android:maxEms="7"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16.5sp" 
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/mImageView"
            android:gravity="top"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13.5sp" 
            android:textColor="@color/text_gray1"/>

        <ImageView
            android:id="@+id/mImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextView2"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/TextView2"
            android:src="@drawable/recurring" />

        <ImageView
            android:id="@+id/mImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextView2"
            android:layout_below="@+id/TextView1"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/mImageView1"
            android:src="@drawable/photo" />

        <TextView
            android:id="@+id/symbol_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/currency_txt"
            android:text="@string/text_label"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/currency_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/amounttextView"
            android:text="@string/dollar"
            android:visibility="visible" 
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/amounttextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="left"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/text_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp" />
    </RelativeLayout>
 <View
        android:id="@+id/mline_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="48dp"
        android:background="@color/line_devide_gray" >
    </View>
</LinearLayout>