<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/mRelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bag_gray" >
        
         <View
                    android:id="@+id/Line0"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="19.5dp"
                    android:background="@color/line_devide_gray" />

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@color/white" >
                

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="42.6dp"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="10dp" >

                    <ImageView
                        android:id="@+id/category_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/airplane"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/account_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/category_imageView"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_black1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3.3dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_gray1"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/Line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                     android:layout_marginLeft="12dp"
                    android:background="@color/devide_gray" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="40.6dp"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="10dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Due"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_gray1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/ currency_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:layout_toLeftOf="@+id/remain_textView"
                        android:text="$"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/text_red"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/remain_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3.3dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                         android:textColor="@color/text_red"
                        android:textSize="20sp"/>
                </RelativeLayout>
                
                    <View
                    android:id="@+id/Line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                     android:layout_marginLeft="12dp"
                    android:background="@color/devide_gray" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="30.6dp"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="10dp" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Paid"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_gray1"
                        android:textSize="15sp"  />

                    <TextView
                        android:id="@+id/ currency_textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:layout_toLeftOf="@+id/Paid_textView"
                        android:text="$"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_black1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Paid_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3.3dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_black1"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="30.6dp"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="10dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Total"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_gray1"
                        android:textSize="15sp"  />

                    <TextView
                        android:id="@+id/ currency_textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:layout_toLeftOf="@+id/Total_textView"
                        android:text="$"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_black1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Total_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3.3dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_black1"
                        android:textSize="15sp" />
                </RelativeLayout>

            </LinearLayout>
            
              <View
                    android:id="@+id/Line7"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/LinearLayout1"
                    android:background="@color/line_devide_gray" />
              

        <RelativeLayout
            android:id="@+id/mRelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/LinearLayout1"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/paybill_btn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:gravity="center"
                android:text="Pay Bill"
                android:textSize="18sp"
                android:textColor="@color/text_black2"
                android:background="@drawable/add_payment_selector"
                
                />
            
            <LinearLayout 
            android:id="@+id/PaidLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            >
                
             <ImageView 
                android:id="@+id/paid_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/paid"
                 />
             <TextView 
                android:id="@+id/paid_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                />
             
	      </LinearLayout>

            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LinearLayout0"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/mRelativeLayout2"
            android:background="@color/bag_gray1"
            >
            
                 <View
                    android:id="@+id/Line6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/line_devide_gray" />
            
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.3dp"
            android:layout_centerVertical="true"
            android:text="Payment History"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray1"
            android:textSize="14sp" />
        
                  <View
                    android:id="@+id/Line5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="@color/line_devide_gray" />

         </RelativeLayout>
         
    </RelativeLayout>

    <ListView
        android:id="@+id/mListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRelativeLayout1"
        android:divider="@color/lightgray"
        android:dividerHeight="0.7dp" >
    </ListView>

    <View
        android:id="@+id/line_label"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mListview"
        android:background="@color/line_devide_gray" >
    </View>

</RelativeLayout>